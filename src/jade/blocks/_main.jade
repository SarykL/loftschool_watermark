
//-------- Language block ------------

.language
  - var lang = [['#', 'rus', 'РУС'], ['#', 'eng', 'ENG']]
  ul.language__list
    each item in lang
      li.language__item
        if item[1] === 'rus'
          a(href='#{item[0]}' class='language__link language__link--#{item[1]} language__link--active')= item[2]
        else
          a(href='#{item[0]}' class='language__link language__link--#{item[1]}')= item[2]

